{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block formulaire %}

    <div class="row" >
        <div class="col-sm-12 col-lg-12">
            <div class="card-body" style="background-color: #e8e8e54d; padding: 1px;">
              
                {% for flashError in app.flashes('verify_email_error') %}
                 <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}

                    <h1 style="text-align: center;background-color: #35578c;color: #f4f4ee;border-radius: 3px;padding-left: 90px;padding-right: 90px; padding-bottom: 10px;padding-top: 10px;">Register</h1>
                <form name="registration_form" method="post" style="padding: 20px;">
                            {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Password'
                            }) }}
                            {{ form_row(registrationForm.agreeTerms) }}

                    <button type="submit" class="btn btn-lg btn-primary" style="margin: 20px; ">Register</button>
                            {{ form_end(registrationForm) }}
                </form>
                
            </div>
        </div>
    </div>

{% endblock %}

